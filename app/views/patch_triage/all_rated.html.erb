<% content_for :title do %>
  All Done!
<% end %>

<div class="all-rated-container">
  <div class="congrats">
    <h1>You've rated all the patches!</h1>
    <p class="congrats-emoji">&#127881;</p>
    <p>Great job! You've rated every single patch in the system.</p>
  </div>

  <div class="stats-summary">
    <h3>Your Stats</h3>
    <div class="stat-grid">
      <div class="stat-item">
        <span class="stat-value"><%= @user_stats[:total_rated] %></span>
        <span class="stat-label">Total Rated</span>
      </div>
      <div class="stat-item">
        <span class="stat-value useful"><%= @user_stats[:useful_votes] %></span>
        <span class="stat-label">Useful votes</span>
      </div>
      <div class="stat-item">
        <span class="stat-value not-useful"><%= @user_stats[:not_useful_votes] %></span>
        <span class="stat-label">Not Useful votes</span>
      </div>
    </div>
  </div>

  <div class="actions">
    <a href="/patch-triage/leaderboard" class="btn-primary">View Leaderboard</a>
    <a href="/patch-triage/stats" class="btn-secondary">View My Stats</a>
  </div>
</div>
